@using CuaHangXeMoHinh.Areas.Admin.Models.ViewModels
@using CuaHangXeMoHinh.Extensions
@model OrderIndexViewModel

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    ViewData["ActiveMenu"] = "order-management";
}

<div class="container-fluid">
    <div class="header mb-4">
        <h1 class="header-title">
            <i class="bi bi-cart-check me-2"></i>
            @ViewData["Title"]
        </h1>
        <p class="text-muted mb-0">Quản lý và theo dõi đơn hàng của khách hàng</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" class="form-control" name="search" value="@Model.Search"
                           placeholder="Tìm theo mã đơn, tên, email, SĐT...">
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="status">
                        <option value="">Tất cả trạng thái</option>
                        @foreach (OrderStatus status in Enum.GetValues(typeof(OrderStatus)))
                        {
                            <option value="@status" selected="@(Model.Status == status)">
                                @status.GetDisplayName()
                            </option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select" name="sortBy">
                        <option value="newest" selected="@(Model.SortBy == "newest")">Mới nhất</option>
                        <option value="oldest" selected="@(Model.SortBy == "oldest")">Cũ nhất</option>
                        <option value="total_desc" selected="@(Model.SortBy == "total_desc")">Tổng tiền (cao-thấp)</option>
                        <option value="total_asc" selected="@(Model.SortBy == "total_asc")">Tổng tiền (thấp-cao)</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search me-2"></i>Lọc
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card shadow-sm">
        <div class="card-header bg-white border-bottom">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2"></i>
                Danh sách đơn hàng
            </h5>
            <div class="card-tools">
                <span class="badge bg-primary">@Model.TotalItems đơn hàng</span>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="w-10">Mã đơn</th>
                            <th class="w-20">Khách hàng</th>
                            <th class="w-15">Ngày đặt</th>
                            <th class="w-15">Tổng tiền</th>
                            <th class="w-20">Trạng thái</th>
                            <th class="w-20 text-center">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Orders)
                        {
                            <tr>
                                <td class="fw-semibold">#@order.Id</td>
                                <td>
                                    <div>
                                        <h6 class="mb-1">@order.User?.FullName</h6>
                                        <small class="text-muted">@order.User?.Email</small>
                                    </div>
                                </td>
                                <td>@order.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                <td class="fw-semibold">@order.TotalAmount.ToString("N0") ₫</td>
                                <td>
                                    @{
                                        var badgeClass = order.Status.GetBadgeClass();
                                    }
                                    <span class="badge @badgeClass">@order.Status.GetDisplayName()</span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@order.Id"
                                           class="btn btn-outline-secondary px-3"
                                           title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@order.Id"
                                           class="btn btn-outline-secondary px-3"
                                           title="Chỉnh sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="StatusLogs" asp-route-id="@order.Id"
                                           class="btn btn-outline-secondary px-3"
                                           title="Lịch sử trạng thái">
                                            <i class="bi bi-clock-history"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        @if (Model.TotalPages > 1)
        {
            <div class="card-footer bg-white border-top">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-search="@Model.Search"
                                   asp-route-status="@Model.Status"
                                   asp-route-sortBy="@Model.SortBy">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }

                        @for (int i = Model.StartPage; i <= Model.EndPage; i++)
                        {
                            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@i"
                                   asp-route-search="@Model.Search"
                                   asp-route-status="@Model.Status"
                                   asp-route-sortBy="@Model.SortBy">
                                    @i
                                </a>
                            </li>
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link"
                                   asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   asp-route-search="@Model.Search"
                                   asp-route-status="@Model.Status"
                                   asp-route-sortBy="@Model.SortBy">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>