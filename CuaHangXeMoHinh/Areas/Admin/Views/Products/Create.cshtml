@model Product

@{
    ViewData["Title"] = "Thêm sản phẩm mới";
    ViewData["ActiveMenu"] = "products";
}

<div class="container-fluid">
    <div class="header mb-4">
        <h1 class="header-title">
            <i class="bi bi-plus-circle me-2"></i>
            @ViewData["Title"]
        </h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-box-seam me-2"></i>
                        Thông tin sản phẩm
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control"
                                       placeholder="Nhập tên sản phẩm" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="CategoryId" class="form-label"></label>
                                <select asp-for="CategoryId" asp-items="ViewBag.CategoryId"
                                        class="form-control">
                                    <option value="">-- Chọn danh mục --</option>
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="BrandId" class="form-label"></label>
                                <select asp-for="BrandId" asp-items="ViewBag.BrandId"
                                        class="form-control">
                                    <option value="">-- Chọn thương hiệu --</option>
                                </select>
                                <span asp-validation-for="BrandId" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Price" class="form-control"
                                           placeholder="Nhập giá bán" />
                                    <span class="input-group-text">₫</span>
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Cost" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="Cost" class="form-control"
                                           placeholder="Nhập giá gốc" />
                                    <span class="input-group-text">₫</span>
                                </div>
                                <span asp-validation-for="Cost" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Stock" class="form-label"></label>
                                <input asp-for="Stock" class="form-control"
                                       placeholder="Nhập số lượng tồn kho" />
                                <span asp-validation-for="Stock" class="text-danger small"></span>
                            </div>

                            <div class="col-12 mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control"
                                          rows="4"
                                          placeholder="Nhập mô tả sản phẩm"></textarea>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox"
                                           asp-for="IsPublished" checked>
                                    <label class="form-check-label" asp-for="IsPublished">
                                        Công khai sản phẩm
                                    </label>
                                </div>
                                <small class="form-text text-muted">
                                    Nếu bật, sản phẩm sẽ hiển thị trên website
                                </small>
                            </div>
                        </div>

                        <div class="pt-3 border-top">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>
                                Lưu sản phẩm
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-arrow-left me-2"></i>
                                Quay lại danh sách
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}