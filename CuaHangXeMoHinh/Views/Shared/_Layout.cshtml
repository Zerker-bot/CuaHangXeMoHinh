          }
        }
    </script>

    <style type="text/tailwindcss">
        @@layer base {
          body {
            @@apply bg-background text-foreground antialiased;
          }
          h1, h2, h3, h4, h5, h6 {
            @@apply font-display tracking-wide;
          }
        }
        @@layer utilities {
            .glass {
                @@apply bg-zinc-950/80 backdrop-blur-md border-b border-white/5;
            }
            .text-glow {
                text-shadow: 0 0 10px rgba(239, 68, 68, 0.5);
            }
            .btn-luxury {
                @@apply bg-primary text-white font-medium py-2 px-6 rounded-none hover:bg-red-600 transition-all duration-300 uppercase tracking-wider text-sm clip-path-slant;
            }
            .clip-path-slant {
                clip-path: polygon(10% 0, 100% 0, 100% 100%, 0% 100%);
            }
        }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar {
            width: 8px;
        }
        ::-webkit-scrollbar-track {
            background: #09090b;
        }
        ::-webkit-scrollbar-thumb {
            background: #3f3f46;
            border-radius: 4px;
        }
        ::-webkit-scrollbar-thumb:hover {
            background: #52525b;
        }
    </style>
</head>
<body class="bg-background text-foreground min-h-screen flex flex-col selection:bg-red-500/30 cursor-none">
    <div class="cursor-dot hidden md:block fixed top-0 left-0 w-2 h-2 bg-white rounded-full z-[9999] pointer-events-none -translate-x-1/2 -translate-y-1/2 will-change-transform shadow-[0_0_8px_rgba(0,0,0,0.8)]"></div>
    <div class="cursor-outline hidden md:block fixed top-0 left-0 w-6 h-6 border border-white rounded-full z-[9999] pointer-events-none -translate-x-1/2 -translate-y-1/2 transition-all duration-200 ease-out will-change-transform shadow-[0_0_8px_rgba(0,0,0,0.8)]"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cursorDot = document.querySelector('.cursor-dot');
            const cursorOutline = document.querySelector('.cursor-outline');
            
            // Mouse Move
            window.addEventListener("mousemove", function (e) {
                const posX = e.clientX;
                const posY = e.clientY;

                // Dot follows immediately
                cursorDot.style.left = `${posX}px`;
                cursorDot.style.top = `${posY}px`;

                // Outline follows with slight delay
                cursorOutline.animate({
                    left: `${posX}px`,
                    top: `${posY}px`
                }, { duration: 500, fill: "forwards" }); 
            });

            // Hover Effects
            const interactiveElements = document.querySelectorAll('a, button, input, .card-3d-wrapper');
            
            interactiveElements.forEach(el => {
                el.addEventListener('mouseenter', () => {
                    // Focus Ring Styling: Scale up, transparent bg, thicker border
                    cursorOutline.classList.add('scale-[1.5]', 'bg-transparent', 'border-white', 'border-[2px]');
                    cursorDot.classList.add('opacity-0'); 
                });
                el.addEventListener('mouseleave', () => {
                    cursorOutline.classList.remove('scale-[1.5]', 'bg-transparent', 'border-white', 'border-[2px]');
                    cursorDot.classList.remove('opacity-0');
                });
            });
        });
    </script>

    <header class="fixed top-0 left-0 right-0 z-50">
        @{
            await Html.RenderPartialAsync("_NavbarMainPartial");
        }
    </header>

