@model Order
@using CuaHangXeMoHinh.Extensions
@{
    ViewData["Title"] = "Order Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="w-full min-h-screen flex flex-col items-center justify-center bg-zinc-950 py-24">
    
    <div class="text-center w-full max-w-4xl px-4 mx-auto flex flex-col items-center">
        <!-- Success Icon -->
        <div class="mb-8 relative group">
            <div class="absolute inset-0 bg-green-500 blur-[50px] opacity-20 group-hover:opacity-40 transition-opacity duration-1000 rounded-full"></div>
            <div class="relative w-24 h-24 rounded-full border-2 border-green-500/50 flex items-center justify-center mx-auto text-green-500 shadow-[0_0_30px_rgba(34,197,94,0.3)] bg-zinc-950">
                <i class="bi bi-check-lg text-5xl"></i>
            </div>
        </div>

        <h1 class="text-4xl md:text-6xl font-display font-bold text-white uppercase tracking-tighter mb-4 text-center">
            ORDER <span class="text-primary">CONFIRMED!</span>
        </h1>
        <p class="text-zinc-400 text-lg max-w-2xl mx-auto mb-12 text-center">
            Thank you for your purchase. Your order has been received and is now being processed.
        </p>

        <!-- Order Summary Card -->
        <div class="w-full max-w-md bg-zinc-900/50 border border-white/10 backdrop-blur-md p-8 mb-12 relative overflow-hidden text-left mx-auto shadow-2xl">
            <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-green-500 to-primary"></div>
            
            <h5 class="text-white font-bold uppercase tracking-wider mb-6 pb-4 border-b border-white/5 flex justify-between items-center text-left">
                Order Summary
                <span class="text-xs font-mono text-zinc-500">@Model.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
            </h5>
            
            <div class="space-y-4 text-left">
                <div class="flex justify-between">
                    <span class="text-zinc-500">Order ID:</span>
                    <span class="text-white font-mono font-bold">#@Model.Id</span>
                </div>
                
                <div class="flex justify-between">
                    <span class="text-zinc-500">Status:</span>
                    <span class="px-2 py-0.5 rounded text-xs font-bold uppercase border bg-green-500/10 text-green-500 border-green-500/20">
                        Received
                    </span>
                </div>
                
                <div class="flex justify-between">
                    <span class="text-zinc-500">Shipping:</span>
                    <span class="text-white font-mono">@Model.ShippingFee.ToString("N0") đ</span>
                </div>
                 <div class="flex justify-between">
                    <span class="text-zinc-500">Discount:</span>
                    <span class="text-red-500 font-mono">-@Model.Discount.ToString("N0") đ</span>
                </div>
                
                <div class="pt-4 border-t border-white/5 flex justify-between items-center mt-4">
                    <span class="text-white font-bold uppercase">Total</span>
                    <span class="text-2xl text-primary font-display font-bold">@Model.TotalAmount.ToString("N0") đ</span>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col md:flex-row gap-4 w-full justify-center max-w-md mx-auto">
            <a href="@Url.Action("Index", "Home")" class="flex-1 px-8 py-4 border border-zinc-700 text-zinc-300 hover:text-white hover:border-white hover:bg-white/5 transition-all uppercase tracking-widest font-bold text-sm text-center">
                <i class="bi bi-arrow-left me-2"></i> HOME
            </a>
            <a href="@Url.Action("Details", "Order", new { id = Model.Id })" class="flex-1 px-8 py-4 bg-white text-black hover:bg-zinc-200 transition-all uppercase tracking-widest font-bold text-sm text-center">
                VIEW DETAILS <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</div>