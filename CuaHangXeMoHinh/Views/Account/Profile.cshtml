@using CuaHangXeMoHinh.Extensions
@model CuaHangXeMoHinh.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-24 min-h-screen">
    
    <!-- Header -->
    <div class="flex items-center gap-4 mb-12">
        <h1 class="text-4xl md:text-5xl font-display font-bold text-white uppercase tracking-tighter">
            MY <span class="text-stroke-primary text-transparent">ACCOUNT</span>
        </h1>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="bg-green-500/10 border border-green-500/20 text-green-500 p-4 mb-8 flex items-center gap-3 backdrop-blur-sm">
             <i class="bi bi-check-circle-fill"></i>
             @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="bg-red-500/10 border border-red-500/20 text-red-500 p-4 mb-8 flex items-center gap-3 backdrop-blur-sm">
             <i class="bi bi-exclamation-triangle-fill"></i>
             @TempData["ErrorMessage"]
        </div>
    }
     <div asp-validation-summary="ModelOnly" class="bg-red-500/10 border border-red-500/20 text-red-500 p-4 mb-8" role="alert"></div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar Navigation -->
        <div class="lg:col-span-1">
            <div class="bg-zinc-900/50 border border-white/10 p-6 backdrop-blur-md sticky top-24">
                <div class="text-center mb-8 pb-8 border-b border-white/10">
                    <div class="w-24 h-24 mx-auto bg-zinc-800 rounded-full flex items-center justify-center mb-4 border-2 border-primary/50 relative">
                        <i class="bi bi-person-fill text-4xl text-zinc-400"></i>
                        <span class="absolute bottom-0 right-0 w-6 h-6 bg-green-500 border-4 border-zinc-900 rounded-full"></span>
                    </div>
                    <h5 class="text-white font-bold text-lg">@Model.User.FullName</h5>
                    <p class="text-zinc-500 text-sm">@Model.User.Email</p>
                </div>

                <nav class="space-y-2">
                    <a href="#profile-info" class="profile-tab-link block p-3 text-zinc-400 hover:text-white hover:bg-white/5 rounded transition-all active-tab" data-target="profile-info">
                        <i class="bi bi-person me-3"></i> Personal Info
                    </a>
                    <a href="#change-password" class="profile-tab-link block p-3 text-zinc-400 hover:text-white hover:bg-white/5 rounded transition-all" data-target="change-password">
                        <i class="bi bi-shield-lock me-3"></i> Security
                    </a>
                    <a href="#addresses" class="profile-tab-link block p-3 text-zinc-400 hover:text-white hover:bg-white/5 rounded transition-all" data-target="addresses">
                        <i class="bi bi-geo-alt me-3"></i> Address Book
                    </a>
                    <a href="#orders" class="profile-tab-link block p-3 text-zinc-400 hover:text-white hover:bg-white/5 rounded transition-all" data-target="orders">
                        <i class="bi bi-box-seam me-3"></i> My Orders
                    </a>
                </nav>

                <div class="mt-8 pt-8 border-t border-white/10">
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="w-full text-left p-3 text-red-500 hover:bg-red-500/10 rounded transition-all flex items-center">
                            <i class="bi bi-box-arrow-right me-3"></i> Sign Out
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Content Area -->
        <div class="lg:col-span-3">
            
            <!-- Tab: Personal Info -->
            <div id="profile-info" class="profile-tab-content block animate-fade-in">
                <div class="bg-zinc-900/50 border border-white/10 p-8 backdrop-blur-md">
                    <h4 class="text-xl font-display font-bold text-white mb-6 flex items-center gap-3">
                        <i class="bi bi-person text-primary"></i> Personal Information
                    </h4>
                    <form asp-action="UpdateProfile" method="post">
                        @Html.AntiForgeryToken()
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                            <div>
                                <label class="block text-xs uppercase tracking-widest text-zinc-500 mb-2">Full Name</label>
                                <input type="text" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" name="fullName" value="@Model.User.FullName" required>
                            </div>
                            <div>
                                <label class="block text-xs uppercase tracking-widest text-zinc-500 mb-2">Email</label>
                                <input type="email" class="w-full bg-zinc-950/50 border border-dashed border-zinc-700 text-zinc-500 p-3 cursor-not-allowed" value="@Model.User.Email" disabled>
                            </div>
                            <div>
                                <label class="block text-xs uppercase tracking-widest text-zinc-500 mb-2">Phone Number</label>
                                <input type="tel" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" name="phoneNumber" value="@Model.User.PhoneNumber">
                            </div>
                            <div>
                                <label class="block text-xs uppercase tracking-widest text-zinc-500 mb-2">Date of Birth</label>
                                <input type="date" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" name="dateOfBirth"
                                       value="@(Model.User.DateOfBirth?.ToString("yyyy-MM-dd"))">
                            </div>
                        </div>
                        <button type="submit" class="bg-primary text-black px-6 py-3 font-bold hover:bg-white transition-colors">
                            UPDATE PROFILE
                        </button>
                    </form>
                </div>
            </div>

            <!-- Tab: Change Password -->
            <div id="change-password" class="profile-tab-content hidden animate-fade-in">
                <div class="bg-zinc-900/50 border border-white/10 p-8 backdrop-blur-md">
                     <h4 class="text-xl font-display font-bold text-white mb-6 flex items-center gap-3">
                        <i class="bi bi-shield-lock text-primary"></i> Change Password
                    </h4>
                    <form asp-action="ChangePassword" method="post" class="max-w-lg">
                        @Html.AntiForgeryToken()
                        <div class="space-y-4 mb-6">
                            <div>
                                <label asp-for="ChangePassword.OldPassword" class="block text-xs uppercase tracking-widest text-zinc-500 mb-2"></label>
                                <input asp-for="ChangePassword.OldPassword" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" type="password">
                                <span asp-validation-for="ChangePassword.OldPassword" class="text-red-500 text-xs text-right block mt-1"></span>
                            </div>
                            <div>
                                <label asp-for="ChangePassword.NewPassword" class="block text-xs uppercase tracking-widest text-zinc-500 mb-2"></label>
                                <input asp-for="ChangePassword.NewPassword" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" type="password">
                                <span asp-validation-for="ChangePassword.NewPassword" class="text-red-500 text-xs text-right block mt-1"></span>
                            </div>
                            <div>
                                <label asp-for="ChangePassword.ConfirmPassword" class="block text-xs uppercase tracking-widest text-zinc-500 mb-2"></label>
                                <input asp-for="ChangePassword.ConfirmPassword" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" type="password">
                                <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-red-500 text-xs text-right block mt-1"></span>
                            </div>
                        </div>
                        <button type="submit" class="bg-primary text-black px-6 py-3 font-bold hover:bg-white transition-colors">
                            UPDATE PASSWORD
                        </button>
                    </form>
                </div>
            </div>

            <!-- Tab: Address Book -->
            <div id="addresses" class="profile-tab-content hidden animate-fade-in">
                <div class="bg-zinc-900/50 border border-white/10 p-8 backdrop-blur-md mb-8">
                     <h4 class="text-xl font-display font-bold text-white mb-6 flex items-center gap-3">
                        <i class="bi bi-plus-lg text-primary"></i> Add New Address
                    </h4>
                    <form asp-action="AddAddress" method="post">
                        @Html.AntiForgeryToken()
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                            <div class="md:col-span-2">
                                <input asp-for="NewAddress.Line1" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" placeholder="Street Address, House No.">
                            </div>
                            <div class="md:col-span-2">
                                <input asp-for="NewAddress.Line2" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" placeholder="Apartment, Suite, Unit (Optional)">
                            </div>
                            <div>
                                <input asp-for="NewAddress.City" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" placeholder="City">
                            </div>
                            <div>
                                <input asp-for="NewAddress.Province" class="w-full bg-zinc-950 border border-white/10 text-white p-3 focus:border-primary focus:ring-0" placeholder="State / Province">
                            </div>
                            <div class="md:col-span-2 flex items-center gap-3">
                                <input asp-for="NewAddress.IsDefault" type="checkbox" class="w-5 h-5 bg-zinc-950 border-white/10 text-primary focus:ring-0 rounded">
                                <label asp-for="NewAddress.IsDefault" class="text-zinc-400">Set as default shipping address</label>
                            </div>
                        </div>
                        <button type="submit" class="bg-white/10 text-white px-6 py-3 font-bold hover:bg-white hover:text-black transition-colors">
                            SAVE ADDRESS
                        </button>
                    </form>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    @foreach (var address in Model.Addresses)
                    {
                        <div class="relative group bg-zinc-900 border @(address.IsDefault ? "border-primary" : "border-white/10") p-6 hover:bg-zinc-800 transition-colors">
                            @if (address.IsDefault)
                            {
                                <span class="absolute top-4 right-4 text-xs bg-primary text-black font-bold px-2 py-1 uppercase tracking-widest">Default</span>
                            }
                            <div class="mb-4">
                                <p class="text-white font-bold text-lg">@address.Line1</p>
                                @if (!string.IsNullOrEmpty(address.Line2)) { <p class="text-zinc-400 text-sm">@address.Line2</p> }
                                <p class="text-zinc-400 text-sm mt-1">@address.City, @address.Province</p>
                            </div>
                            <div class="flex gap-4 border-t border-white/5 pt-4 mt-auto">
                                @if (!address.IsDefault)
                                {
                                    <form asp-action="SetDefaultAddress" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@address.Id">
                                        <button type="submit" class="text-xs uppercase tracking-widest text-zinc-500 hover:text-primary transition-colors">Set Default</button>
                                    </form>
                                }
                                <form asp-action="DeleteAddress" method="post" onsubmit="return confirm('Are you sure?');">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@address.Id">
                                    <button type="submit" class="text-xs uppercase tracking-widest text-zinc-500 hover:text-red-500 transition-colors">Delete</button>
                                </form>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Tab: Order History -->
            <div id="orders" class="profile-tab-content hidden animate-fade-in">
                <div class="bg-zinc-900/50 border border-white/10 p-8 backdrop-blur-md">
                    <h4 class="text-xl font-display font-bold text-white mb-6 flex items-center gap-3">
                        <i class="bi bi-receipt text-primary"></i> Order History
                    </h4>
                    
                    @if (Model.Orders.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full text-left">
                                <thead class="text-xs uppercase tracking-widest text-zinc-500 border-b border-white/10">
                                    <tr>
                                        <th class="pb-4">Order ID</th>
                                        <th class="pb-4">Date</th>
                                        <th class="pb-4">Items</th>
                                        <th class="pb-4">Total</th>
                                        <th class="pb-4">Status</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-white/5">
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr class="group hover:bg-white/5 transition-colors">
                                            <td class="py-4 font-mono text-primary">#@order.Id.ToString("D6")</td>
                                            <td class="py-4 text-zinc-400">@order.CreatedAt.ToString("MMM dd, yyyy")</td>
                                            <td class="py-4 text-white">
                                                @if (order.Items.Any())
                                                {
                                                    <span>@order.Items.First().Product.Name</span>
                                                    @if (order.Items.Count > 1)
                                                    {
                                                        <span class="text-zinc-500 text-xs ml-1">(+@(order.Items.Count - 1) more)</span>
                                                    }
                                                }
                                            </td>
                                            <td class="py-4 text-white font-bold font-mono">@order.TotalAmount.ToString("N0")</td>
                                            <td class="py-4">
                                                <span class="px-3 py-1 text-xs font-bold uppercase tracking-wider rounded-sm
                                                    @(order.Status.ToString() == "Pending" ? "bg-yellow-500/10 text-yellow-500" : 
                                                      order.Status.ToString() == "Completed" ? "bg-green-500/10 text-green-500" : 
                                                      order.Status.ToString() == "Cancelled" ? "bg-red-500/10 text-red-500" : "bg-zinc-700 text-zinc-300")">
                                                    @order.Status.GetDisplayName()
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-12">
                            <i class="bi bi-cart-x text-6xl text-zinc-800 mb-4 block"></i>
                            <p class="text-zinc-500 mb-6">No orders found.</p>
                            <a href="/" class="bg-primary text-black px-8 py-3 font-bold hover:bg-white transition-colors">
                                START SHOPPING
                            </a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tabs = document.querySelectorAll('.profile-tab-link');
            const contents = document.querySelectorAll('.profile-tab-content');

            function activateTab(tabId) {
                // Remove # if present
                const targetId = tabId.replace('#', '');
                
                // Update UI Links
                tabs.forEach(t => {
                    if (t.dataset.target === targetId) {
                        t.classList.add('bg-white/10', 'text-white', 'border-l-2', 'border-primary');
                        t.classList.remove('text-zinc-400');
                    } else {
                        t.classList.remove('bg-white/10', 'text-white', 'border-l-2', 'border-primary');
                        t.classList.add('text-zinc-400');
                    }
                });

                // Show Content
                contents.forEach(c => {
                    if (c.id === targetId) {
                        c.classList.remove('hidden');
                    } else {
                        c.classList.add('hidden');
                    }
                });
            }

            // Click Handlers
            tabs.forEach(tab => {
                tab.addEventListener('click', (e) => {
                    e.preventDefault();
                    const target = tab.dataset.target;
                    activateTab(target);
                    // Update URL hash without scroll
                    history.pushState(null, null, '#' + target);
                });
            });

            // Initial Load based on Hash or Default
            const serverActiveTab = '@ViewBag.ActiveTab';
             if (serverActiveTab) {
                activateTab(serverActiveTab);
            } else if (window.location.hash) {
                activateTab(window.location.hash);
            } else {
                activateTab('profile-info'); // Default
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}